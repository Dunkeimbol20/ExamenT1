<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <!--  Barra horizontal de navegaciÃ³n interna  -->
        <LinearLayout
            android:id="@+id/barraNavegacion"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            >
                <Button
                    android:id="@+id/btnCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_background"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="0dp"
                    android:text="Categoria" />
                <Button
                    android:id="@+id/btnNovedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_background"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="0dp"
                    android:text="Novedades"/>
                <Button
                    android:id="@+id/btnColeccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_background"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="0dp"
                    android:text="Coleccion"/>
        </LinearLayout>
        <!--  Contenedor de fragmentos internos  -->
        <FrameLayout
            android:id="@+id/contenedorInterno"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>

